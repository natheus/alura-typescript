{
  "compilerOptions": {
    "outDir": "app/dist/js",
    "target": "ES6",
    "moduleResolution": "Node",
    "lib": ["ES6", "dom"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": ["app/src/**/*"]
}
